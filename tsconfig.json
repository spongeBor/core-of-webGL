{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "types": ["react", "node"],
    "module": "NodeNext",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "./webpack.config.js"]
}
